@using Markdig
@model SinglePageViewModel

<div>
	<h1>@Model.Title</h1>
	@if (Model.CurrentPage.Date != DateTime.MinValue)
	{
		<em>@Model.CurrentPage.Date.ToString("yyyy-MM-dd")</em>
	}

	@using (var reader = Model.CurrentPage.ContentTextReader)
	{
		@Html.Raw(Markdown.ToHtml(reader.ReadToEnd(), Model.MarkdownPipeline))
	}
</div>
